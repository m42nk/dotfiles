#!/usr/bin/env bash

URL="${1:-"https://vid.speedlight.site/video.m3u8?"}"
SUB="${2:-"https://cca.megafiles.store/58/b1/58b108555cd2fc6c93dfeafc08b5e657/58b108555cd2fc6c93dfeafc08b5e657.vtt"}"
REFERRER="${3:-"https://www.cineby.app/"}"

mpv "$URL" \
  --sub-file="$SUB" \
  --referrer="$REFERRER" \
  --start=00:34:30 \
  --sub-font-size=72
